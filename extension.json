{
	"name": "AddImgTag",
	"author": [
                "[https://github.com/ajdgg awajie]",
                "[https://github.com/ZoruaFox ZoruaFox]"
        ],
	"url": "https://github.com/TopRealm/mediawiki-extensions-AddImgTag",
	"descriptionmsg": "addimgtag-desc",
	"version": "1.0.0",
	"license-name": "GPL-2.0-or-later",
	"type": "parserhook",
	"manifest_version": 2,
	"AutoloadClasses": {
	    	"AddImgTagHook": "includes/Hooks/AddImgTagHook.php",
			"AddImgParserFunHook": "includes/Hooks/AddImgParserFunHook.php",
			"AddImgTag\\Security\\ImgSecurity": "includes/Security/ImgSecurity.php",
			"AddImgTagPreprocessHook": "includes/Hooks/AddImgTagPreprocessHook.php"
	    	},
	"Hooks": {
		"ParserFirstCallInit": [
			"AddImgTagHook::onParserFirstCallInit",
			"AddImgParserFunHook::onParserFirstCallInit"
		],
		"ParserBeforeInternalParse": [
			"AddImgTagPreprocessHook::onParserBeforeInternalParse"
		]
	},
	"ExtensionMessagesFiles": {
		"AddImgTagAlias": "AddImgTag.alias.php"
	},
	"MessagesDirs": {
		"AddImgTag": [
			"i18n"
		]
	},
	"config": {
		"AddImgTagWhitelist": {
		    "descriptionmsg": "config-desc-addimgtagwhitelist",
		    "value": false
		},
		"AddImgTagWhitelistDomainsList": {
		    "descriptionmsg": "config-desc-addimgtagwhitelistdomainslist",
		    "value": []
		},
		"AddImgTagBlacklist": {
		    "descriptionmsg": "config-desc-addimgtagblacklist",
		    "value": false
		},
		"AddImgTagBlacklistDomainsList": {
		    "descriptionmsg": "config-desc-addimgtagblacklistdomainslist",
		    "value": []
		},
		"AddImgTagFixSelfClosing": {
			"descriptionmsg": "config-desc-addimgtagfixselfclosing",
			"value": false
		},
		"AddImgTagAllowedSchemes": {
			"descriptionmsg": "config-desc-addimgtagallowedschemes",
			"value": ["http", "https"]
		},
		"AddImgTagBlockedSchemes": {
			"descriptionmsg": "config-desc-addimgtagblockedschemes",
			"value": ["data", "javascript", "vbscript", "file", "ftp", "blob"]
		},
		"AddImgTagEnableAdvancedValidation": {
			"descriptionmsg": "config-desc-addimgtagenhancedvalidation",
			"value": true
		}
	}
}
